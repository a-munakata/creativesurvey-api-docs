.control
  = form_tag nil do
    %select.dropdown

      - %w(ruby curl).each do |key, value|
        %option{ :value => value }
          = key

  %ul.side-nav
    - categories.each_with_index do |category|
      = form_for find_one_category(category.id), remote: true do |f|
        %li
          %h3.main-title{ "data-category" => category.anchor_name }
            = link_to category.title, "##{category.anchor_name}"

          %ul
            -# TODO: seedsをdbに保存、そこからデータを取ってくるように
            -#- entries.where( :category_id => category.id ).each do |entry|
            - Dir::entries("seeds/#{category.anchor_name}").try(:drop, 2).each do |entry|
              %li.sub-title{ "data-entry" => entry.gsub(".md", "") }
                = link_to entry.gsub(".md", ""), "##{ entry.gsub(".md", "") }"