.deletable-wrap
  = form_for @variable do |f|
    .add-container
      - if @variable.errors.any?
        #error_explanation
          %h2= "#{pluralize(@variable.errors.count, "error")} prohibited this variable from being saved:"
          %ul
            - @variable.errors.full_messages.each do |msg|
              %li= msg

      = f.text_field :used_variables, placeholder: "変数名"
      = f.text_field :explanation, placeholder: "説明"
      = f.hidden_field :entry_id, value: entry_id

      = link_to '×', "#", remote: true, class: "destroy-dom-button"

      .actions
        = f.submit 'Save', id: "variable", class: "ajax-submit"
