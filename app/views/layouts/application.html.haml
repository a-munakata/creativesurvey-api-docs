!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=1024", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "#{ENV["APPLICATION_DISPLAY_NAME"]}"

    = yield :head

  %body
    .header#global
      .container
        .inner.clearfix
          .logo
            = link_to "#{ENV["APPLICATION_NAME"]}", "https://creativesurvey.com"
    .main
      .inner

        = render "partials/side_nav"

        = yield :body